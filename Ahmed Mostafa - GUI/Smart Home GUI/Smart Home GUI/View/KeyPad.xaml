<UserControl x:Class="Smart_Home_GUI.View.KeyPad"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Smart_Home_GUI.View"
             mc:Ignorable="d" 
             d:DesignHeight="185" d:DesignWidth="270">
    <UserControl.Resources>
        <CubicEase x:Key="EaseOut" EasingMode="EaseOut"/>
        <Style x:Key="3DButton" TargetType="{x:Type Button}">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="#4A90E2" Offset="0"/>
                        <GradientStop Color="#357ABD" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Grid RenderTransformOrigin="0.5, 0.5">
                            <Grid.RenderTransform>
                                <ScaleTransform x:Name="scale" ScaleX="1" ScaleY="1"/>
                            </Grid.RenderTransform>
                            <Border x:Name="border"
                            Background="{TemplateBinding Background}"
                            CornerRadius="6"
                            BorderBrush="#222"
                            BorderThickness="1"
                            SnapsToDevicePixels="True">
                                <Border.Effect>
                                    <DropShadowEffect BlurRadius="8" ShadowDepth="2" Opacity="0.4"/>
                                </Border.Effect>
                            </Border>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Grid>
                        <ControlTemplate.Triggers>

                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                            <GradientStop Color="#5AA0F2" Offset="0"/>
                                            <GradientStop Color="#468ACE" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>

                            <Trigger Property="IsPressed" Value="True">
                                <Trigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="scale"
                                                     Storyboard.TargetProperty="ScaleX"
                                                     To=".96" Duration="0:0:0.08">
                                                <DoubleAnimation.EasingFunction>
                                                    <CubicEase EasingMode="EaseOut"/>
                                                </DoubleAnimation.EasingFunction>
                                            </DoubleAnimation>
                                            <DoubleAnimation Storyboard.TargetName="scale"
                                                     Storyboard.TargetProperty="ScaleY"
                                                     To=".96" Duration="0:0:0.08">
                                                <DoubleAnimation.EasingFunction>
                                                    <CubicEase EasingMode="EaseOut"/>
                                                </DoubleAnimation.EasingFunction>
                                            </DoubleAnimation>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.EnterActions>

                                <Trigger.ExitActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="scale"
                                                     Storyboard.TargetProperty="ScaleX"
                                                     To="1" Duration="0:0:0.08">
                                                <DoubleAnimation.EasingFunction>
                                                    <CubicEase EasingMode="EaseOut"/>
                                                </DoubleAnimation.EasingFunction>
                                            </DoubleAnimation>
                                            <DoubleAnimation Storyboard.TargetName="scale"
                                                     Storyboard.TargetProperty="ScaleY"
                                                     To="1" Duration="0:0:0.08">
                                                <DoubleAnimation.EasingFunction>
                                                    <CubicEase EasingMode="EaseOut"/>
                                                </DoubleAnimation.EasingFunction>
                                            </DoubleAnimation>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.ExitActions>
                                <Setter TargetName="border" Property="Effect" Value="{x:Null}"/>
                            </Trigger>

                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Opacity" Value="0.6"/>
                            </Trigger>

                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>
    <Viewbox>
        <Grid>
            <Border CornerRadius="10" Width="270" Height="185" Background="#FF303036" BorderThickness="2">
                <Grid>
                    <Button Style="{StaticResource 3DButton}"  Width="55" Height="25" Content="A" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0" Command="{Binding PressCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" CommandParameter="A">
                        <Button.Background>
                            <LinearGradientBrush EndPoint="0,1">
                                <GradientStop Color="#FFE24A4A"/>
                                <GradientStop Color="#FFE26039" Offset="1"/>
                            </LinearGradientBrush>
                        </Button.Background>
                    </Button>
                    <Button Style="{StaticResource 3DButton}"  Width="55" Height="25" Content="B" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="75,10,0,0" Command="{Binding PressCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" CommandParameter="B">
                        <Button.Background>
                            <LinearGradientBrush EndPoint="0,1">
                                <GradientStop Color="#FFE24A4A"/>
                                <GradientStop Color="#FFE26039" Offset="1"/>
                            </LinearGradientBrush>
                        </Button.Background>
                    </Button>
                    <Button Style="{StaticResource 3DButton}"  Width="55" Height="25" Content="C" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="140,10,0,0" Command="{Binding PressCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" CommandParameter="C">
                        <Button.Background>
                            <LinearGradientBrush EndPoint="0,1">
                                <GradientStop Color="#FFE24A4A"/>
                                <GradientStop Color="#FFE26039" Offset="1"/>
                            </LinearGradientBrush>
                        </Button.Background>
                    </Button>
                    <Button Style="{StaticResource 3DButton}"  Width="55" Height="25" Content="D" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="205,10,0,0" Command="{Binding PressCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" CommandParameter="D">
                        <Button.Background>
                            <LinearGradientBrush EndPoint="0,1">
                                <GradientStop Color="#FFE24A4A"/>
                                <GradientStop Color="#FFE26039" Offset="1"/>
                            </LinearGradientBrush>
                        </Button.Background>
                    </Button>
                    <Button Style="{StaticResource 3DButton}"  Width="55" Height="25" Content="1" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,45,0,0" Command="{Binding PressCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" CommandParameter="1" />
                    <Button Style="{StaticResource 3DButton}"  Width="55" Height="25" Content="2" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="75,45,0,0" Command="{Binding PressCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" CommandParameter="2"/>
                    <Button Style="{StaticResource 3DButton}"  Width="55" Height="25" Content="3" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="140,45,0,0" Command="{Binding PressCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" CommandParameter="3"/>
                    <Button Style="{StaticResource 3DButton}"  Width="55" Height="25" Content="4" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,80,0,0" Command="{Binding PressCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" CommandParameter="4"/>
                    <Button Style="{StaticResource 3DButton}"  Width="55" Height="25" Content="5" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="75,80,0,0" Command="{Binding PressCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" CommandParameter="5"/>
                    <Button Style="{StaticResource 3DButton}"  Width="55" Height="25" Content="6" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="140,80,0,0" Command="{Binding PressCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" CommandParameter="6"/>
                    <Button Style="{StaticResource 3DButton}"  Width="55" Height="60" Content="Enter" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="205,45,0,0" Command="{Binding PressCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" CommandParameter="E">
                        <Button.Background>
                            <LinearGradientBrush EndPoint="0,1">
                                <GradientStop Color="#FFE24A4A"/>
                                <GradientStop Color="#FFE26039" Offset="1"/>
                            </LinearGradientBrush>
                        </Button.Background>
                    </Button>
                    <Button Style="{StaticResource 3DButton}"  Width="55" Height="25" Content="7" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,115,0,0" Command="{Binding PressCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" CommandParameter="7"/>
                    <Button Style="{StaticResource 3DButton}"  Width="55" Height="25" Content="8" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="75,115,0,0" Command="{Binding PressCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" CommandParameter="8"/>
                    <Button Style="{StaticResource 3DButton}"  Width="55" Height="25" Content="9" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="140,115,0,0" Command="{Binding PressCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" CommandParameter="9"/>
                    <Button Style="{StaticResource 3DButton}"  Width="55" Height="25" Content="*" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,150,0,0" Command="{Binding PressCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" CommandParameter="*" FontSize="20" VerticalContentAlignment="Center"/>
                    <Button Style="{StaticResource 3DButton}"  Width="55" Height="25" Content="0" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="75,150,0,0" Command="{Binding PressCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" CommandParameter="0"/>
                    <Button Style="{StaticResource 3DButton}"  Width="55" Height="25" Content="#" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="140,150,0,0" Command="{Binding PressCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" CommandParameter="#"/>
                    <Button Style="{StaticResource 3DButton}"  Width="55" Height="60" Content="Delete" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="205,115,0,0" Command="{Binding PressCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" CommandParameter="R">
                        <Button.Background>
                            <LinearGradientBrush EndPoint="0,1">
                                <GradientStop Color="#FFE24A4A"/>
                                <GradientStop Color="#FFE26039" Offset="1"/>
                            </LinearGradientBrush>
                        </Button.Background>
                    </Button>
                </Grid>
            </Border>
        </Grid>
    </Viewbox>
</UserControl>
