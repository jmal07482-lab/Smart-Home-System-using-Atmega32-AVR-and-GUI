             xmlns:local="clr-namespace:Smart_Home_GUI.View"
             mc:Ignorable="d" 
             d:DesignHeight="90" d:DesignWidth="150">
    <Viewbox>
    <Grid >
        <Path Fill="#FF28C9CC" Height="85" Width="150" HorizontalAlignment="Left" VerticalAlignment="Top" Grid.RowSpan="2" StrokeThickness="2"  StrokeLineJoin="Round">
