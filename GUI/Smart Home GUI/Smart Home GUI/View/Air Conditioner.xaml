        <Ellipse Width="60" Height="60" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0" Fill="White" Stroke="Black" StrokeThickness="0.5" ></Ellipse>
        <Path Fill="White" Height="85" Width="150" HorizontalAlignment="Left" VerticalAlignment="Top" Grid.RowSpan="2" StrokeThickness="2"  StrokeLineJoin="Round">
            <Path.Data>
                <PathGeometry Figures="M80,0 A15,15,0,0,1,85,7   L85,7 85,73   A15,15,0,0,1,80,80  L80,80 77,80  A15,15,0,0,0,80,73 L80,73 80,7  A15,15,0,0,0,77,0        "/>
            </Path.Data>
        </Path>
        <Rectangle Width="50" Height="40" Fill="White" RadiusX="4" RadiusY="4" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="90,6,0,0" Stroke="Black" StrokeThickness="0.5" />
        <Rectangle Width="50" Height="2" Fill="White" RadiusX="2" RadiusY="2" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="90,55,0,0" />
        <Rectangle Width="50" Height="2" Fill="White" RadiusX="2" RadiusY="2" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="90,60,0,0" />
        <Rectangle Width="50" Height="2" Fill="White" RadiusX="2" RadiusY="2" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="90,65,0,0" />
        <Rectangle Width="50" Height="2" Fill="White" RadiusX="2" RadiusY="2" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="90,70,0,0" />
        <Image x:Name="fan" Source="/ImagesIcons/Fan.png" HorizontalAlignment="Left" Height="55" Margin="12.5,12.5,0,0" VerticalAlignment="Top" Width="55" Stretch="Fill"/>
        <Label Content="-777" HorizontalAlignment="Left" Margin="90,6,0,0" VerticalAlignment="Top" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Foreground="#FF33BB20" Height="40" Width="50" FontWeight="Bold" Background="{x:Null}" FontSize="16"/>
